@model OrderProcessingApp.Models.Order

@{
    ViewData["Title"] = "Place Order";
}

<div class="card shadow-lg p-4" data-aos="fade-up">
    <h2 class="text-center mb-4">Order Entry</h2>

    <form asp-action="ProcessOrder" method="post">
        <div class="mb-3">
            <label class="form-label">Order Amount:</label>
            <input asp-for="Amount" class="form-control" placeholder="Enter amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Customer Type:</label>
            <select asp-for="CustomerType" class="form-select">
                <option value="New">New</option>
                <option value="Loyal">Loyal</option>
            </select>
            <span asp-validation-for="CustomerType" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit Order</button>
    </form>
</div>
